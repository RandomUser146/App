<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.VitalsFragment">
    <data>
        <variable
            name="viewModel"
            type="com.example.app.view_models.VitalsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/rainfall"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/soilValues">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Expected Rainfall"
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/t2"
                    app:layout_constraintTop_toBottomOf="@id/t1"
                    android:text="0.3mm"
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Title.Text"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/soilValues"
            app:layout_constraintTop_toBottomOf="@id/rainfall"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@id/taskDetails">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/s1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/sgrpah"
                    android:text="Statistics"
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/sgrpah"
                    app:layout_constraintTop_toBottomOf="@id/s1"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/taskDetails"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/soilValues"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Pending Tasks : "
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x2"
                    app:layout_constraintTop_toBottomOf="@id/x1"
                    android:text="Completed Tasks : "
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x3"
                    app:layout_constraintTop_toBottomOf="@id/x2"
                    android:text="Dispensed Water : "
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x4"
                    app:layout_constraintTop_toBottomOf="@id/x3"
                    android:text="Dispensed Fertilizer : "
                    android:layout_margin="8dp"
                    android:paddingLeft="10dp"
                    style="@style/MaterialAlertDialog.Material3.Body.Text"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>